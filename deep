                        <p id="quick-view-price" class="mt-3 text-2xl font-serif font-bold text-gray-900"></p>
                        <p id="quick-view-description" class="mt-4 text-gray-600"></p>
                        
                        <div class="mt-6">
                            <div class="flex items-center">
                                <span class="text-gray-700 mr-3">Quantity</span>
                                <div class="flex items-center border border-gray-300 rounded">
                                    <button type="button" class="w-10 h-10 flex items-center justify-center text-gray-600 hover:bg-gray-100" onclick="decrementQuantity()">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                    <input type="text" id="quick-view-quantity" value="1" class="w-12 h-10 text-center border-0 focus:ring-0">
                                    <button type="button" class="w-10 h-10 flex items-center justify-center text-gray-600 hover:bg-gray-100" onclick="incrementQuantity()">
                                        <i class="fas fa-plus"></i>
                                    </button>
                                </div>
                            </div>
                            
                            <div class="mt-8 flex space-x-4">
                                <button onclick="addToCartFromQuickView()" class="flex-1 bg-amber-700 hover:bg-amber-800 text-white py-3 px-4 rounded-md transition-slow">
                                    Add to Cart
                                </button>
                                <button class="flex-1 bg-white border border-amber-700 text-amber-700 hover:bg-amber-50 py-3 px-4 rounded-md transition-slow">
                                    <i class="far fa-heart mr-2"></i> Wishlist
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

