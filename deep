            <div class="p-6">
                <div class="flex justify-between items-center mb-6">
                    <h2 id="quick-view-title" class="text-2xl font-serif font-bold text-gray-900">Product Quick View</h2>
                    <button onclick="closeQuickView()" class="text-gray-500 hover:text-gray-700">
                        <i class="fas fa-times text-xl"></i>
                    </button>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <div>
                        <!-- Media Gallery -->
                        <div id="quick-view-media" class="relative">
