                                    <p class="text-xs text-gray-500">PNG, JPG up to 5MB</p>
                                </div>
                            </div>
                            <div id="image-preview" class="mt-2 grid grid-cols-3 gap-2 hidden">
                                <!-- Image previews will be shown here -->
                            </div>
                        </div>
                        
                        <!-- Video Upload -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Product Video (Optional)</label>
                            <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-md">
                                <div class="space-y-1 text-center">
                                    <div class="flex text-sm text-gray-600">
                                        <label for="product-video" class="relative cursor-pointer bg-white rounded-md font-medium text-amber-700 hover:text-amber-800 focus-within:outline-none focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-amber-500">
